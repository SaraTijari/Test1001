from microbit import *
import radio
radio.config(group=17)

quantite_lait = 0

radio.on()
while True:
    # Attendre l'appui sur le bouton A pour simuler la prise d'une dose de lait
    if button_a.was_pressed():
        quantite_lait += 1
        display.show(quantite_lait)
        sleep(1000)  # Afficher la quantit√© pendant 1 seconde
